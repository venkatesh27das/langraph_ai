#!/usr/bin/env python3
"""
Simple ChromaDB Test - Check if your database has content
Uses LMStudio for embeddings
"""

import chromadb
import os
import requests

def test_chroma():
    db_path = "../data/chroma_db"
    
    # Check if ChromaDB folder exists
    if not os.path.exists(db_path):
        print(f"‚ùå ChromaDB folder not found: {db_path}")
        return
    
    try:
        # Connect to ChromaDB
        client = chromadb.PersistentClient(path=db_path)
        print(f"‚úÖ Connected to ChromaDB")
        
        # List collections
        collections = client.list_collections()
        if not collections:
            print("‚ùå No collections found - database is empty")
            return
        
        print(f"üìö Found {len(collections)} collection(s)")
        
        # Check each collection
        for collection in collections:
            count = collection.count()
            print(f"  - Collection '{collection.name}': {count} documents")
            
            if count > 0:
                # Get a sample document
                sample = collection.get(limit=1)
                if sample['documents']:
                    doc_preview = sample['documents'][0][:100] + "..."
                    print(f"    Sample: {doc_preview}")
                    
                    # Try a simple search with LMStudio embeddings
                    print("    üîç Testing search with LMStudio...")
                    
                    # Get embedding from LMStudio
                    try:
                        response = requests.post(
                            "http://localhost:1234/v1/embeddings",
                            json={
                                "input": ["What is visualization of data?"],
                                "model": "text-embedding-nomic-embed-text-v1.5"  # Change this to your model
                            },
                            timeout=10
                        )
                        
                        if response.status_code == 200:
                            embedding = response.json()['data'][0]['embedding']
                            
                            # Search using the embedding
                            results = collection.query(
                                query_embeddings=[embedding],
                                n_results=2
                            )
                            
                            if results['documents'][0]:
                                print(f"    ‚úÖ Search works - found {len(results['documents'][0])} results")
                            else:
                                print(f"    ‚ö†Ô∏è  Search returned no results")
                        else:
                            print(f"    ‚ùå LMStudio embedding failed: {response.status_code}")
                            
                    except requests.exceptions.RequestException:
                        print(f"    ‚ùå Cannot connect to LMStudio - make sure it's running on localhost:1234")
                    except Exception as e:
                        print(f"    ‚ùå Search error: {e}")
        
        print("\nüéâ ChromaDB test complete!")
        
    except Exception as e:
        print(f"‚ùå Error: {e}")

if __name__ == "__main__":
    test_chroma()